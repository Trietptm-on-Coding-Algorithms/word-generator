{
  "name": "word-generator",
  "version": "1.0.0",
  "author": "David Nunez <david.nunez@sungardas.com>",
  "description": "Generates a random sentence of noun, verb, adjective, and adverb words to assist in naming software releases",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:sungard-dnunez/word-generator.git"
  },
  "scripts": {
    "clean": "rm -Rf build node_modules",
    "premake-directories": "npm run clean",
    "make-directories": "mkdir -p build/js build/styles build/templates",
    "postmake-directories": "npm install",
    "premake-lodash": "npm run make-directories",
    "make-lodash": "lodash modern strict -p -o build/js/lodash.js",
    "prebuild-vendorjs": "npm run make-lodash",
    "build-vendorjs": "cat $(cat package.json | jq '.dependencyPaths | to_entries | map(.value)' | tr \"\n\" \" \" | sed -r 's/[][\",]//g') > build/js/vendor.js",
    "prebuild-appjs": "npm run build-vendorjs",
    "build-appjs": "uglifyjs $(find app/client/shared -name '*.module.js') $(find app/client/components -name '*.module.js') $(find app/client -name '*.config.js' -o -name '*.constant.js' -o -name '*.value.js' -o -name '*.service.js' -o -name '*.provider.js' -o -name '*.filter.js' -o -name '*.animation.js' -o -name '*.controller.js' -o -name '*.component.js' -o -name '*.directive.js') --source-map build/js/app.js.map --source-map-url 'app.js.map' --source-map-include-sources -c",
    "prebuild-css": "npm run build-appjs",
    "build-css": "lessc app/client/assets/styles/index.less build/styles/app.css --source-map-less-inline --source-map-map-inline --verbose",
    "prebuild-html": "npm run build-css",
    "build-html": "jade app/client/*.jade --out build/templates/",
    "prebuild": "npm run build-html",
    "build": "rm build/js/lodash.js"
  },
  "dependencyPaths": {
    "angular": "./node_modules/angular/angular.min.js",
    "angular-animate": "./node_modules/angular-animate/angular-animate.min.js",
    "lodash": "build/js/lodash.js"
  },
  "dependencies": {
    "angular": "1.4.8",
    "angular-animate": "1.4.8"
  }
}
